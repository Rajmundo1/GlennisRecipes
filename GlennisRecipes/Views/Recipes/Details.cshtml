@model GlennisRecipes.BLL.ViewModels.RecipeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            <div>
                <img src="@(@"images\" + @Model.ImagePath)" />
            </div>
            @Html.DisplayFor(modelItem => @Model.Name) <br>
            Created by: @Model.OwnerName <br>
            Instructions: @Model.Instructions <br>
            Overall Ratings: @Model.OverallRatings <br>
            Own Rating: @Model.OwnRating <br>
            Comments: <br>
            <thead>
                <tr>
                    <th>
                        User
                    </th>
                    <th>
                        Comment
                    </th>
                    <th>
                        Time
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.UserComments) {
                <tr>
                    @item.OwnerName
                </tr>
                <tr>
                    @item.Comment
                </tr>
                <tr>
                    @item.TimeStamp
                </tr>
            }
            </tbody>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
